<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seguindo">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSeguindo"
        android:layout_width="325dp"
        android:layout_height="515dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonSeguir"
        app:layout_constraintStart_toStartOf="@+id/buttonSeguir"
        app:layout_constraintTop_toBottomOf="@+id/buttonSeguir" />

    <EditText
        android:id="@+id/editTextSeguirName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSeguir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Seguir"
        app:layout_constraintEnd_toEndOf="@+id/editTextSeguirName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextSeguirName"
        app:layout_constraintTop_toBottomOf="@+id/editTextSeguirName" />
</androidx.constraintlayout.widget.ConstraintLayout>